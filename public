direction = {
	{-1, -1},//左上
	{0, -1},//上
	{1, -1},//右上
	
	{-1, 0},//左
	//{0, 0},//変化量00はありえない
	{1, 0},//右
	
	{-1, 1},//左下
	{0, 1},//下
	{1, 1},//右下
}

//引数：チェックしたい支点のxy座標
void direction_check(cx, cy){
	for(int n = 0, n < 8; n++){	  //0方向をすべて確認
		int dx = cx;				//引数から頂いた現在の座標
		int dy = cy;
		while(cell_judge(dx, dy)){  //範囲内なら継続
			dx += direction[n][0];      //x方向の変化量が入る
			dy += direction[n][1];      //y方向の変化量が入る
      array[dx][dy];//***主な処理をここでする***//
		}
	}
}
